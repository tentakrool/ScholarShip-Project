<html>
  <head>
    <% content_for:stylesheets do %>
        <%= stylesheet_link_tag "login.css" %>
      <%end%>
  </head>
  <header class="navbar navbar-fixed-top navbar-inverse">
      <!--div class="jumbotron">
        <div class="container fluid text-center">
          <h1> Hi. </h1>
        </div>
      </div-->
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand">ScholarShip</a>
      </div>
    
      <nav>
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "About Us",'/aboutus', :method => :get %> </li> 
          <li><%= link_to "Contact Us",'/contactus', :method => :get %> </li> 
          <li><%= link_to "Home", '/homepage', :method => :get  %></li>
          <li><%= link_to "Sign Up", '/users/sign_up', :method => :get %></li>
          <li><%= link_to "Log In", '/users/sign_in' %> </li> 
        </ul>
      </nav>
    </div>
  </header>
  <body>
    <div class="container-fluid">
      <div class="col-sm-offset-4 text-left">
        <div id="login">
        <h3 class="text-center">Forgot Password</h3>
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
			  <%= devise_error_messages! %>

			  <div class="field">
			    <%= f.label :email %><br />
			    <%= f.email_field :email, autofocus: true %>
			  </div>

			  <div class="actions">
			    <%= f.submit "Send me reset password instructions" %>
			  </div>
			<% end %>

			<%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </body>
  <footer class="container-fluid text-right">
      <p>Copyright &copy; The ScholarShip </p>
  </footer>
</html>